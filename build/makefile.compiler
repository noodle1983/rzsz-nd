CC=g++
cc=gcc
AR=ar
RANLIB=ranlib 
ARFLAGS=rcs
SHAREDFLAG= -fPIC -shared
CFLAGs=-DDEBUG -Wall -Wno-class-memaccess -fsanitize=address -fno-omit-frame-pointer -D_FILE_OFFSET_BITS=64 -g $(INC_DIR)
CXXFLAGS=-std=gnu++17 $(CFLAGs)

UNAME_S := $(shell uname -s)
ifeq ($(UNAME_S),Linux)
	SHARED_LIB += -lrt -lpthread
endif
ifeq ($(UNAME_S),Darwin)
	SHARED_LIB += -lpthread
endif
LDFLAGS=$(SHARED_LIB_DIR) $(SHARED_LIB) $(STATIC_LIB) -fsanitize=address -fno-omit-frame-pointer
